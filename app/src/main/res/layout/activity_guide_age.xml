<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/guide_study"
            android:textColor="@color/orange"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/description_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/age_kids"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:scaleType="center"
            android:background="@drawable/circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/age6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="6"
            android:background="@drawable/circle_age"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/description_age"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/age7"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/age7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_age"
            android:gravity="center"
            android:text="7"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/age6"
            app:layout_constraintTop_toBottomOf="@id/description_age"
            app:layout_constraintEnd_toStartOf="@id/age8"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/age8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_age"
            android:gravity="center"
            android:text="8"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/age7"
            app:layout_constraintTop_toBottomOf="@id/description_age"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/age9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_age"
            android:gravity="center"
            android:text="9"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/age10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/age6" />
        <TextView
            android:id="@+id/age10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_age"
            android:gravity="center"
            android:text="10"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/age6"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/age9"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_unselected"
            app:layout_constraintTop_toBottomOf="@id/age9"
            android:layout_marginHorizontal="320dp"
            android:layout_marginTop="32dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_continue"
                android:textColor="@color/white"
                android:paddingVertical="16dp"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>