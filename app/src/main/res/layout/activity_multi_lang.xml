<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_item_lang_unselect"
            app:layout_constraintBottom_toBottomOf="@id/btn_Save"
            app:layout_constraintEnd_toStartOf="@+id/btn_vn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/img_eng"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/eng"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/description_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/choice_lang_eng"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@id/img_eng"
                app:layout_constraintStart_toStartOf="@id/img_eng"
                app:layout_constraintTop_toBottomOf="@id/img_eng" />

            <TextView
                android:id="@+id/eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/lang_eng"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/img_eng"
                app:layout_constraintStart_toStartOf="@id/img_eng"
                app:layout_constraintTop_toBottomOf="@id/description_eng" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_vn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_item_lang_unselect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_eng">
            <ImageView
                android:id="@+id/img_vn"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/vn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="16dp"
                />
            <TextView
                android:id="@+id/description_vn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choice_lang_vn"
                app:layout_constraintTop_toBottomOf="@id/img_vn"
                app:layout_constraintStart_toStartOf="@id/img_vn"
                app:layout_constraintEnd_toEndOf="@id/img_vn"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/vn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lang_vn"
                app:layout_constraintTop_toBottomOf="@id/description_vn"
                app:layout_constraintStart_toStartOf="@id/img_vn"
                app:layout_constraintEnd_toEndOf="@id/img_vn"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_radios"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="250dp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_save"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>